{
    "name": "algoritma/castor-recipes",
    "description": "Composer plugin that installs ready-to-use Castor recipes for various platforms and frameworks",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "composer-plugin-api": "^2.0",
        "symfony/filesystem": "^6.0|^7.0",
        "tigitz/php-spellchecker": "*"
    },
    "require-dev": {
        "algoritma/php-coding-standard": "^3.0",
        "jolicode/castor": "^1.0",
        "phpunit/phpunit": "^11.5",
        "roave/security-advisories": "dev-latest"
    },
    "repositories": {
        "algoritma-php-cs": {
            "type": "vcs",
            "url": "https://phpcs:glpat-Hw9asjC2Q3gX4Cy9PB9k@gitlab.algoritma.it/algoritma/php-coding-standard.git"
        }
    },
    "autoload": {
        "psr-4": {
            "Algoritma\\CastorRecipes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Algoritma\\CastorRecipes\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Algoritma\\CastorRecipes\\Plugin"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "algoritma/castor-recipes": true,
            "algoritma/php-coding-standard": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --diff",
        "rector-check": "rector process --dry-run",
        "rector-fix": "rector process",
        "phpstan": "phpstan analyze"
    }
}
