{
    "name": "raffaelecarelle/castor-recipes",
    "description": "Composer plugin that installs ready-to-use Castor recipes for various platforms and frameworks",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "composer-plugin-api": "^2.0",
        "symfony/filesystem": "^6.0|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "jolicode/castor": "^1.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.2",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "CastorRecipes\\": "src/"
        }
    },
    "extra": {
        "class": "CastorRecipes\\Plugin"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "raffaelecarelle/castor-recipes": true
        }
    }
}
