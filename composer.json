{
    "name": "raffaelecarelle/castor-recipes",
    "description": "A collection of ready-to-use Castor recipes for various platforms and frameworks",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Castor Recipes Team",
            "email": "info@castor-recipes.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0",
        "symfony/yaml": "^6.0|^7.0",
        "symfony/filesystem": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^0.17.0",
        "symfony/var-dumper": "^6.0|^7.0",
        "jolicode/castor": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CastorRecipes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CastorRecipes\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "rector": "rector process",
        "quality": [
            "@cs-fix",
            "@phpstan",
            "@rector",
            "@test"
        ],
        "install-recipe": "CastorRecipes\\Installer\\ComposerInstaller::installRecipe"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "bin": [
        "bin/install-recipe"
    ]
}
